{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Debug Shiny-Chikorita",
            "request": "launch",
            "type": "node",
            "program": "src/server.ts",
            "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\ts-node",
            "sourceMaps": true
        },
        {
            "name": "Test files",
            "request": "launch",
            "type": "node",
            "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\jest",
            "args": [
                "--config",
                "jest.config.json"
            ],
            "outputCapture": "std"
        }
    ]
}